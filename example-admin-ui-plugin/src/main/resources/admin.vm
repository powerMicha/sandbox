<html>
<head>
    <title>$i18n.getText("xjira.admin.label")</title>
    <meta name="decorator" content="atl.admin" />
    $webResourceManager.requireResource("com.oraise.jira.plugins.example-admin-ui-plugin:resources")
    <meta name="application-base-url" content="$applicationProperties.getBaseUrl()">
</head>
<body>
<form id="admin" class="aui">
    <div class="field-group">
        <label for="name">$i18n.getText("xjira.admin.name.label")</label>
        <input type="text" id="name" name="name" class="text">
    </div>
    <div class="field-group">
        <label for="time">$i18n.getText("xjira.admin.time.label")</label>
        <input type="text" id="time" name="time" class="text">
    </div>
    <div class="field-group">
        <input type="submit" value="$i18n.getText('xjira.admin.save.label')" class="button">
    </div>
</form>
</body>
</html>